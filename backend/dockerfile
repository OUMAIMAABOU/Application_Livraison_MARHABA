FROM node:16

LABEL version="1.0.0"

WORKDIR /app

COPY ["package.json","package-lock.json","./"]

RUN npm install -g nodemon

COPY . .

EXPOSE 8080

ENV NODE_ENV =  NODE_ENV
ENV PORT=PORT
ENV MONG_URL=MONG_URL
ENV ACCESS_TOKEN=ACCESS_TOKEN
ENV PASSEMAIL=PASSEMAIL
ENV USER=USER
ENV SERVICE=SERVICE

CMD nodemon app.js